@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model RoleVM

<div class="container mt-3">

    <div>
        <a asp-action="Index" asp-controller="PhoneManage" class="btn btn-primary waves-effect waves-light">
            <i class="mdi mdi-keyboard-backspace"></i> Geriyə
        </a>
    </div>
    <hr>
    <div class="card-box">

        <form class="form-horizontal group-border-dashed" asp-action="update" asp-controller="RoleManage" method="post"
            enctype="multipart/form-data" novalidate="">

            <div class="form-group row my-2">
                <label asp-for="Name" class="col-sm-2 col-form-label">Ad</label>
                <div class="col-sm-6">
                    <input asp-for="Name" type="text" class="form-control" required="" placeholder="Ad">
                    <span asp-validation-for="Name" class="d-md-flex justify-content-md-center text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-2">
                <div class="offset-sm-3 col-sm-9 mt-2">
                    <button type="submit" class="btn btn-success waves-effect waves-light mr-1">
                        Submit
                    </button>
                    <button type="reset" class="btn btn-danger waves-effect">
                        Reset
                    </button>
                </div>
            </div>
        </form>
    </div>

</div>
